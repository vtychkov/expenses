@using Expenses.WebApp
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<UserVM>

<div class="panel-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Дата рождения</th>
                <th>Пол</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Birthday</td>
                    <td>@user.Sex</td>
                    <td>@user.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>

